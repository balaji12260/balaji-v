#include <stdio.h>
#include <string.h>
#include <stdbool.h>

// Function to check if the string is generated by the CFG
bool isValidCFG(char *str) {
    int len = strlen(str);

    // Must be at least 2 characters: one 0 and one 1
    if (len < 2) {
        return false;
    }

    // Check first character is 0 and last character is 1
    if (str[0] != '0' || str[len - 1] != '1') {
        return false;
    }

    // Check the middle part (A → 0A | 1A | ε) — all characters should be 0 or 1
    for (int i = 1; i < len - 1; i++) {
        if (str[i] != '0' && str[i] != '1') {
            return false;
        }
    }

    return true;
}

int main() {
    char input[100];

    printf("Enter a binary string: ");
    scanf("%s", input);

    if (isValidCFG(input)) {
        printf("The string is in the language defined by the CFG.\n");
    } else {
        printf("The string is NOT in the language defined by the CFG.\n");
    }

    return 0;
}
